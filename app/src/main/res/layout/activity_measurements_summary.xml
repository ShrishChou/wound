<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:focusable="true"
  android:focusableInTouchMode="true">

  <RelativeLayout
    android:id="@+id/idContainerLayout"
    android:layout_width="match_parent"
    android:layout_marginStart="20dp"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/patientIdLabelTv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Patient ID"
      android:textAppearance="@android:style/TextAppearance.Small"/>

    <LinearLayout
      android:id="@+id/patientIdContainerLayout"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_alignLeft="@+id/patientIdLabelTv"
      android:layout_alignStart="@+id/patientIdLabelTv"
      android:layout_below="@+id/patientIdLabelTv"
      android:orientation="horizontal">

      <EditText
        android:id="@+id/patientIdEt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:enabled="false"
        android:maxLines="1"/>
    </LinearLayout>


    <ImageView
      android:id="@+id/imageView"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_weight="0.31"
      android:layout_marginTop="9dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@+id/patientIdContainerLayout"
      android:src="@drawable/logo"/>

  </RelativeLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="54dp"
    android:layout_below="@+id/idContainerLayout">

    <LinearLayout
      android:id="@+id/measurementsContainerLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/actionBtnLayout"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/idContainerLayout"
      android:orientation="vertical">

      <RelativeLayout
        android:id="@+id/woundQuestionnaireContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/statusIndicatorWoundQuestionnaireImageView"
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:src="@android:drawable/presence_invisible"/>

        <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/statusIndicatorWoundQuestionnaireImageView"
          android:layout_toRightOf="@+id/statusIndicatorWoundQuestionnaireImageView">

          <TextView
            android:id="@+id/woundQuestionnaireAppNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/statusIndicatorWoundQuestionnaireImageView"
            android:layout_toRightOf="@+id/statusIndicatorWoundQuestionnaireImageView"
            android:text="Questionnaire"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        </FrameLayout>

        <Button
          android:id="@+id/woundQuestionnaireBtn"
          style="@android:style/Widget.Material.Light.Button.Inset"
          android:layout_width="150dp"
          android:layout_height="match_parent"
          android:layout_marginRight="10dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:backgroundTintMode="multiply"
          android:text="Start"
          android:textAppearance="@android:style/TextAppearance.Medium"/>
      </RelativeLayout>


      <RelativeLayout
        android:id="@+id/woundContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/statusIndicatorWoundImageView"
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:src="@android:drawable/presence_invisible"/>

        <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/statusIndicatorWoundImageView"
          android:layout_toRightOf="@+id/statusIndicatorWoundImageView">

          <TextView
            android:id="@+id/woundAppNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/statusIndicatorWoundImageView"
            android:layout_toRightOf="@+id/statusIndicatorWoundImageView"
            android:text="Visible Image"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        </FrameLayout>

        <Button
          android:id="@+id/woundVisibleImageBtn"
          style="@android:style/Widget.Material.Light.Button.Inset"
          android:layout_width="150dp"
          android:layout_height="match_parent"
          android:layout_marginRight="10dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:backgroundTintMode="multiply"
          android:text="Start"
          android:textAppearance="@android:style/TextAppearance.Medium"/>
      </RelativeLayout>


      <RelativeLayout
        android:id="@+id/woundThermalContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/statusIndicatorWoundThermalImageView"
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:src="@android:drawable/presence_invisible"/>

        <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/statusIndicatorWoundThermalImageView"
          android:layout_toRightOf="@+id/statusIndicatorWoundThermalImageView">

          <TextView
            android:id="@+id/woundThermalAppNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/statusIndicatorWoundThermalImageView"
            android:layout_toRightOf="@+id/statusIndicatorWoundThermalImageView"
            android:text="Thermal Image"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        </FrameLayout>

        <Button
          android:id="@+id/woundThermalBtn"
          style="@android:style/Widget.Material.Light.Button.Inset"
          android:layout_width="150dp"
          android:layout_height="match_parent"
          android:layout_marginRight="10dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:backgroundTintMode="multiply"
          android:text="Start"
          android:textAppearance="@android:style/TextAppearance.Medium"/>
      </RelativeLayout>


    </LinearLayout>
  </ScrollView>

  <Button
    android:id="@+id/doneBtn"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:text="Done"
    android:textAppearance="@android:style/TextAppearance.Medium"/>

  <TextView
    android:id="@+id/connectionTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="9dp"
    android:layout_marginLeft="9dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="waiting for connection"
    android:visibility="gone"/>


</RelativeLayout>
