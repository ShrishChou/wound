<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/general_settings_title"
        android:key="pref_key_general_settings">
        <ListPreference
            android:key="@string/pref_mode_key"
            android:title="@string/pref_mode_label"
            android:summary="%s"
            android:dialogTitle="@string/pref_mode_dialog_title"
            android:entries="@array/pref_mode_entries"
            android:entryValues="@array/pref_mode_values"
            android:defaultValue="@string/pref_mode_anonymous" />
    </PreferenceCategory>
</PreferenceScreen>
